generator client {
  provider = "prisma-client"
  output   = "../lib/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  role      Role     @default(DRIVER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  vehicles  Vehicle[]
  bookings  Booking[]
}

enum Role {
  DRIVER
  ADMIN
  MANAGER
}

model Vehicle {
  id        String   @id @default(uuid())
  plate     String   @unique
  model     String?
  size      Size     @default(STANDARD)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

enum Size {
  COMPACT
  STANDARD
  LARGE
}

model Site {
  id          String   @id @default(uuid())
  name        String
  address     String
  slots       Slot[]
  pricingRules PricingRule[]
}

model Slot {
  id           String   @id @default(uuid())
  label        String
  type         SlotType @default(STANDARD)
  pricePerHour Float
  status       SlotStatus @default(FREE)
  siteId       String
  site         Site     @relation(fields: [siteId], references: [id])
  bookings     Booking[]
  x            Int?      // Coordinate for map
  y            Int?      // Coordinate for map
  rotation     Int?      @default(0)
}

enum SlotType {
  STANDARD
  VIP
  EV
  HANDICAP
}

enum SlotStatus {
  FREE
  OCCUPIED
  RESERVED
  MAINTENANCE
}

model Booking {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  totalPrice Float
  status    BookingStatus @default(ACTIVE)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  slotId    String
  slot      Slot     @relation(fields: [slotId], references: [id])
  createdAt DateTime @default(now())
}

enum BookingStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

model PricingRule {
  id          String @id @default(uuid())
  basePrice   Float
  isDynamic   Boolean @default(false)
  surgeMultiplier Float @default(1.0)
  siteId      String
  site        Site    @relation(fields: [siteId], references: [id])
}
